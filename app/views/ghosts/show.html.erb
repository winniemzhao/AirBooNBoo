<div class="wrapper">
  <div class="ghost-title">
    <div>
      <h1><%= @ghost.name.capitalize %> the <%= @ghost.spook_action %></h1>
      <h5>Hosted by <%= @ghost.user.name %></h5>
    </div>
    <% render 'total-rating' %>
    <p>
      <i class="fa-solid fa-star"></i> <%= @total_rating %> · <%= @ghost.reviews.length %> Reviews · <%= @ghost.location.capitalize %>
    </p>
  </div>
  <div class="ghost-info">
    <%= cl_image_tag @ghost.photo.key, :alt=>"ghost profile picture" %>
    <div class="ghost-details">
      <p><%= @ghost.description %></p>
      <div class="new-spook-form">
        *Reserve this Ghost Form to be put here - temp link here:
        <%= link_to "Book This Ghost", new_ghost_spook_path(@ghost) %>
      </div>
    </div>
  </div>
  <div class="ghost-reviews">
    <h2>Reviews</h2>
    <% if @ghost.reviews.length > 0 %>
      <% render 'reviews' %>
    <% else %>
      <p>BoOoOoOoo...this ghost does not have any reviews yet...</p>
    <% end %>
  </div>
</div>
