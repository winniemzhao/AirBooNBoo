<div class="container">
  <div class="row justify-content-center pt-3">
    <div class="col-6">
      <h1 class="d-flex justify-content-center">Describe thy phantom</h1>
      <%= simple_form_for(@ghost) do |f| %>
        <%= f.input :name, placeholder: 'Name of ghost' %>
        <%= f.input :spook_action, collection: ["Interactive Personality Ghost", "Funnel Ghost", "Orbs", "Poltergeist", "Mist/Fog/Whisp Ghost"] %>
        <%= f.input :location, placeholder: 'Where does your ghost like to haunt?' %>
        <%= f.input :daily_rate, placeholder: 'Enter your price here' %>
        <%= f.input :description, placeholder: 'This is where you present your ghost to the world!' %>
        <%= f.submit "Post your Ghost", class="btn-flat" %>
      <% end %>
    </div>
  </div>
</div>
