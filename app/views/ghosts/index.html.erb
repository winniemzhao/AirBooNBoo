
<div class="container-ghost">
<% @ghosts.each do | ghost | %>
  <div class="card-ghost">
  <%= link_to ghost_path(ghost) do %>
   <%= cl_image_tag ghost.photo.key, :alt=>"ghost profile picture"%>
   <% end %>
    <div class="card-ghost-infos">
      <div>
        <h2><%= link_to ghost.name, ghost_path(ghost) %></h2>
        <p><%= ghost.description %></p>
        <h2 class="card-ghost-pricing">$ <%= ghost.daily_rate %> night</h2>
      </div>
      <h2 class="card-ghost-user">‚≠ê4.5</h2>
    </div>

  </div>
<% end %>
</div>
