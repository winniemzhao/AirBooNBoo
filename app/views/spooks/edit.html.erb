<div class="wrapper">
  <div class="row justify-content-center form-row">
    <div class="col-4 card-form">
    <h2>Edit your Reservation</h2>
      <%= simple_form_for(@spook, url: my_spook_path) do |f| %>
        <%= f.input :start_date, as: :date, html5: true %>
        <%= f.input :end_date, as: :date, html5: true %>
        <%= f.submit 'Confirm', class: 'btn-flat remove-btn-border' %>
      <% end %>
    </div>
  </div>
</div>
