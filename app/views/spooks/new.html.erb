<div class="wrapper">
  <div class="row justify-content-center form-row">
    <div class="col-4 card-form">
    <h1>Reserve <%= @ghost.name.capitalize %></h1>
      <%= simple_form_for([@ghost, @spook]) do |f| %>
        <%= f.input :start_date, as: :date, html5: true %>
        <%= f.input :end_date, as: :date, html5: true %>
        <%= f.submit 'Reserve my Spook!', class: 'btn-flat' %>
      <% end %>
    </div>

  </div>
</div>
